<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VillaBuluyorum" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/app_bg_color</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.VillaBuluyorum" parent="Base.Theme.VillaBuluyorum" />

    <!-- Background Styles -->
    <style name="ApplicationBackGroundStyle">
        <item name="android:background">@color/app_bg_color</item>
    </style>

    <style name="TranslucentBackgroundStyle">
        <item name="android:background">@drawable/half_transparent_white_bg</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="android:background">@drawable/main_button_gb</item>
    </style>
    <style name="SecondaryButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="android:background">@drawable/secondary_button_bg</item>
    </style>


</resources>