<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.androiddevelopers.villabuluyorum.view.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_villaDetailFragment"
            app:destination="@id/villaDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_navigation_home_to_chatsFragment"
            app:destination="@id/chatsFragment" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_notifications"
            app:destination="@id/notificationsFragment" />
    </fragment>

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.androiddevelopers.villabuluyorum.view.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.androiddevelopers.villabuluyorum.view.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.androiddevelopers.villabuluyorum.view.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_navigation_profile_to_editProfileDetailsFragment"
            app:destination="@id/editProfileDetailsFragment" />
        <action
            android:id="@+id/action_navigation_profile_to_villaCreateFragment"
            app:destination="@id/villaCreateFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_navigation_profile_to_favoriteFragment"
            app:destination="@id/favoriteFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <action
        android:id="@+id/action_global_navigation_reservation"
        app:destination="@id/navigation_reservation"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim"
        app:popUpTo="@id/navigation_reservation"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_global_navigation_home"
        app:destination="@id/navigation_home"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim"
        app:popUpTo="@id/navigation_home"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_navigation_profile"
        app:destination="@id/navigation_profile"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim"
        app:popUpTo="@id/navigation_profile"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_navigation_search"
        app:destination="@id/navigation_search"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim"
        app:popUpTo="@id/navigation_search"
        app:popUpToInclusive="true" />
    <fragment
        android:id="@+id/villaCreateFragment"
        android:name="com.androiddevelopers.villabuluyorum.view.villa.VillaCreateFragment"
        android:label="fragment_villa_create"
        tools:layout="@layout/fragment_villa_create">
        <argument
            android:name="facilities"
            android:defaultValue="@null"
            app:argType="com.androiddevelopers.villabuluyorum.model.villa.Facilities"
            app:nullable="true" />
        <action
            android:id="@+id/action_villaCreateFragment_to_villaCreateFacilitiesFragment"
            app:destination="@id/villaCreateFacilitiesFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/villaDetailFragment"
        android:name="com.androiddevelopers.villabuluyorum.view.villa.VillaDetailFragment"
        android:label="fragment_villa_detail"
        tools:layout="@layout/fragment_villa_detail">
        <action
            android:id="@+id/action_villaDetailFragment_to_villaDetailFacilitiesFragment2"
            app:destination="@id/villaDetailFacilitiesFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <argument
            android:name="villaId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.androiddevelopers.villabuluyorum.view.chat.MessagesFragment"
        android:label="fragment_messages"
        tools:layout="@layout/fragment_messages" />
    <fragment
        android:id="@+id/chatsFragment"
        android:name="com.androiddevelopers.villabuluyorum.view.chat.ChatsFragment"
        android:label="fragment_chats"
        tools:layout="@layout/fragment_chats">
        <action
            android:id="@+id/action_chatsFragment_to_messagesFragment"
            app:destination="@id/messagesFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_reservation"
        android:name="com.androiddevelopers.villabuluyorum.view.reservation.ReservationFragment"
        android:label="fragment_reservation"
        tools:layout="@layout/fragment_reservation">
        <action
            android:id="@+id/action_reservationFragment_to_reservationDetailsFragment"
            app:destination="@id/reservationDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.androiddevelopers.villabuluyorum.view.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_villaDetailFragment"
            app:destination="@id/villaDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/reservationDetailsFragment"
        android:name="com.androiddevelopers.villabuluyorum.view.reservation.ReservationDetailsFragment"
        android:label="fragment_reservation_details"
        tools:layout="@layout/fragment_reservation_details" />
    <fragment
        android:id="@+id/villaDetailFacilitiesFragment"
        android:name="com.androiddevelopers.villabuluyorum.view.villa.VillaDetailFacilitiesFragment"
        android:label="fragment_villa_detail_facilities"
        tools:layout="@layout/fragment_villa_detail_facilities" />
    <fragment
        android:id="@+id/villaCreateFacilitiesFragment"
        android:name="com.androiddevelopers.villabuluyorum.view.villa.VillaCreateFacilitiesFragment"
        android:label="fragment_villa_create_facilities"
        tools:layout="@layout/fragment_villa_create_facilities">
        <action
            android:id="@+id/action_villaCreateFacilitiesFragment_to_villaCreateFragment"
            app:destination="@id/villaCreateFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/editProfileDetailsFragment"
        android:name="com.androiddevelopers.villabuluyorum.view.profile.EditProfileDetailsFragment"
        android:label="fragment_edit_profile_details"
        tools:layout="@layout/fragment_edit_profile_details" />
</navigation>