<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ApplicationBackGroundStyle"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="view.search.FilterFragment">

    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnFilterAndSearch"
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/ivBack"
                android:layout_marginVertical="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:scaleType="centerCrop"
                android:paddingEnd="5dp"
                android:paddingVertical="5dp"
                android:src="@drawable/baseline_arrow_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:tint="@color/normal_text_color" />

            <TextView
                android:layout_marginTop="15dp"
                android:text="Konum"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/normal_text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Konumunuza en yakın olan evleri arayın veya yeni bir konum seçin"
                android:textSize="16sp"
                android:textColor="@color/normal_text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:text="Tokat"
                    android:padding="4dp"
                    android:background="@drawable/selected_text_bg"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvNewLocation"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:text="Yeni Ekle"
                    android:padding="4dp"
                    android:background="@drawable/selectable_text_bg"
                    android:textColor="@color/normal_text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:text="Fiyat Aralığı"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/normal_text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="ücretler ve vergiler hariç gecelik fiyat"
                android:textSize="16sp"
                android:textColor="@color/normal_text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.google.android.material.slider.RangeSlider
                android:id="@+id/slider"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0.0"
                android:valueTo="10000.0"
                app:values="@array/initial_slider_values"
                style="@style/Widget.App.Slider"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="Odalar ve yataklar"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/normal_text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="Yatak odaları"
                    android:textSize="20sp"
                    android:textColor="@color/normal_text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/bed_room_all"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:text="Tümü"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="15dp"
                            android:background="@drawable/selected_text_bg"
                            android:textColor="@color/normal_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"/>
                        <TextView
                            android:id="@+id/bed_room_1"
                            android:layout_margin="5dp"
                            android:padding="4dp"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:text="1"
                            android:background="@drawable/selectable_text_bg_oval"
                            android:textColor="@color/normal_text_color"
                            android:layout_width="45dp"
                            android:gravity="center"
                            android:layout_height="45dp"/>
                        <TextView
                            android:id="@+id/bed_room_2"
                            android:layout_margin="5dp"
                            android:padding="4dp"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:text="2"
                            android:background="@drawable/selectable_text_bg_oval"
                            android:textColor="@color/normal_text_color"
                            android:layout_width="45dp"
                            android:gravity="center"
                            android:layout_height="45dp"/>
                        <TextView
                            android:id="@+id/bed_room_3"
                            android:layout_margin="5dp"
                            android:padding="4dp"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:text="3"
                            android:background="@drawable/selectable_text_bg_oval"
                            android:textColor="@color/normal_text_color"
                            android:layout_width="45dp"
                            android:gravity="center"
                            android:layout_height="45dp"/>
                        <TextView
                            android:id="@+id/bed_room_4"
                            android:layout_margin="5dp"
                            android:padding="4dp"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:text="4"
                            android:background="@drawable/selectable_text_bg_oval"
                            android:textColor="@color/normal_text_color"
                            android:layout_width="45dp"
                            android:gravity="center"
                            android:layout_height="45dp"/>
                        <TextView
                            android:id="@+id/bed_room_5"
                            android:layout_margin="5dp"
                            android:padding="4dp"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:text="5"
                            android:background="@drawable/selectable_text_bg_oval"
                            android:textColor="@color/normal_text_color"
                            android:layout_width="45dp"
                            android:gravity="center"
                            android:layout_height="45dp"/>
                    </LinearLayout>

                </HorizontalScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="10dp"
                    android:text="Yataklar"
                    android:textSize="20sp"
                    android:textColor="@color/normal_text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/bed_all"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:text="Tümü"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="15dp"
                        android:background="@drawable/selected_text_bg"
                        android:textColor="@color/normal_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"/>
                    <TextView
                        android:id="@+id/bed_1"
                        android:layout_margin="5dp"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:text="1"
                        android:background="@drawable/selectable_text_bg_oval"
                        android:textColor="@color/normal_text_color"
                        android:layout_width="45dp"
                        android:gravity="center"
                        android:layout_height="45dp"/>
                    <TextView
                        android:id="@+id/bed_2"
                        android:layout_margin="5dp"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:text="2"
                        android:background="@drawable/selectable_text_bg_oval"
                        android:textColor="@color/normal_text_color"
                        android:layout_width="45dp"
                        android:gravity="center"
                        android:layout_height="45dp"/>
                    <TextView
                        android:id="@+id/bed_3"
                        android:layout_margin="5dp"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:text="3"
                        android:background="@drawable/selectable_text_bg_oval"
                        android:textColor="@color/normal_text_color"
                        android:layout_width="45dp"
                        android:gravity="center"
                        android:layout_height="45dp"/>
                    <TextView
                        android:id="@+id/bed_4"
                        android:layout_margin="5dp"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:text="4"
                        android:background="@drawable/selectable_text_bg_oval"
                        android:textColor="@color/normal_text_color"
                        android:layout_width="45dp"
                        android:gravity="center"
                        android:layout_height="45dp"/>
                    <TextView
                        android:id="@+id/bed_5"
                        android:layout_margin="5dp"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:text="5"
                        android:background="@drawable/selectable_text_bg_oval"
                        android:textColor="@color/normal_text_color"
                        android:layout_width="45dp"
                        android:gravity="center"
                        android:layout_height="45dp"/>
                </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="10dp"
                    android:text="Banyolar"
                    android:textSize="20sp"
                    android:textColor="@color/normal_text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/bath_all"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:text="Tümü"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="15dp"
                        android:background="@drawable/selected_text_bg"
                        android:textColor="@color/normal_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"/>
                    <TextView
                        android:id="@+id/bath_1"
                        android:layout_margin="5dp"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:text="1"
                        android:background="@drawable/selectable_text_bg_oval"
                        android:textColor="@color/normal_text_color"
                        android:layout_width="45dp"
                        android:gravity="center"
                        android:layout_height="45dp"/>
                    <TextView
                        android:id="@+id/bath_2"
                        android:layout_margin="5dp"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:text="2"
                        android:background="@drawable/selectable_text_bg_oval"
                        android:textColor="@color/normal_text_color"
                        android:layout_width="45dp"
                        android:gravity="center"
                        android:layout_height="45dp"/>
                    <TextView
                        android:id="@+id/bath_3"
                        android:layout_margin="5dp"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:text="3"
                        android:background="@drawable/selectable_text_bg_oval"
                        android:textColor="@color/normal_text_color"
                        android:layout_width="45dp"
                        android:gravity="center"
                        android:layout_height="45dp"/>
                    <TextView
                        android:id="@+id/bath_4"
                        android:layout_margin="5dp"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:text="4"
                        android:background="@drawable/selectable_text_bg_oval"
                        android:textColor="@color/normal_text_color"
                        android:layout_width="45dp"
                        android:gravity="center"
                        android:layout_height="45dp"/>
                    <TextView
                        android:id="@+id/bath_5"
                        android:layout_margin="5dp"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:text="5"
                        android:background="@drawable/selectable_text_bg_oval"
                        android:textColor="@color/normal_text_color"
                        android:layout_width="45dp"
                        android:gravity="center"
                        android:layout_height="45dp"/>
                </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/normal_text_color"
                android:textSize="24sp"
                android:text="Favori Villalar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/layout_favorite_house"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/secondary_button_bg"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:tint="@color/normal_text_color"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/baseline_favorite_24"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_marginStart="15dp"
                    android:textColor="@color/normal_text_color"
                    android:text="Favori Villalar"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginBottom="25dp"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/normal_text_color"
                    android:text="Misafirlerin en sevdikleri villalar"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/normal_text_color"
                android:textSize="24sp"
                android:text="Yer Tİpi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/house"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_button_gb"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_h"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/home"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:tint="@color/normal_text_color" />


                    <TextView
                        android:id="@+id/tv_h"
                        app:layout_constraintTop_toBottomOf="@+id/iv_h"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="10dp"
                        android:text="Ev"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/normal_text_color"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/item_apartment"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/secondary_button_bg"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_d"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/apartment"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:tint="@color/normal_text_color" />


                    <TextView
                        android:id="@+id/tv_d"
                        app:layout_constraintTop_toBottomOf="@+id/iv_d"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="10dp"
                        android:text="Daire"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/normal_text_color"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/item_guest_house"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/secondary_button_bg"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_m"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/guest_house"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:tint="@color/normal_text_color" />

                    <TextView
                        android:id="@+id/tv_m"
                        android:textColor="@color/normal_text_color"
                        app:layout_constraintTop_toBottomOf="@+id/iv_m"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="10dp"
                        android:text="Misafir evi"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/item_hotel"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/secondary_button_bg"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_o"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/hotel"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:tint="@color/normal_text_color" />


                    <TextView
                        android:id="@+id/tv_o"
                        android:textColor="@color/normal_text_color"
                        app:layout_constraintTop_toBottomOf="@+id/iv_o"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="10dp"
                        android:text="Otel"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/normal_text_color"
                    android:textSize="24sp"
                    android:text="Olanaklar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_cb_wifi"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Wi-fi"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:id="@+id/cb_wifi"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_cb_kitchen"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Mutfak"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:id="@+id/cb_kitchen"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_cb_washing_machine"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Çamaşır makinesi"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:id="@+id/cb_washing_machine"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_cb_air"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Klima"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
