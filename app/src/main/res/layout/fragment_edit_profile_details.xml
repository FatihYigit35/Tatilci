<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ApplicationBackGroundStyle"
    tools:context=".view.profile.EditProfileDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="15dp"
                    android:src="@drawable/baseline_arrow_back"
                    android:id="@+id/ivBack"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:tint="@color/normal_text_color" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:src="@drawable/default_user_icon"
                        android:id="@+id/ivUserProfilePhoto"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="150dp"
                        android:layout_height="150dp"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:src="@drawable/edit"
                        android:layout_margin="10dp"
                        app:layout_constraintBottom_toBottomOf="@+id/ivUserProfilePhoto"
                        app:layout_constraintEnd_toEndOf="@+id/ivUserProfilePhoto"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:textSize="22sp"
                    android:textColor="@color/normal_text_color"
                    android:id="@+id/txtUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kullanıcı Adı"
                    android:layout_marginTop="20dp" />

                <RelativeLayout
                    android:layout_marginTop="8dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edit_text_bg">

                    <EditText
                        android:id="@+id/username_input"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@+id/username_icon"
                        android:text=""
                        android:hint="Kullanıcı adı"
                        android:padding="10dp"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <ImageView
                        android:padding="3dp"
                        android:id="@+id/username_icon"
                        android:src="@drawable/profile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:tint="@color/normal_text_color" />


                </RelativeLayout>



                <TextView
                    android:id="@+id/txtEmail"
                    android:text="E-posta"
                    android:textSize="22sp"
                    android:textColor="@color/normal_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp" />

                <RelativeLayout
                    android:layout_marginTop="8dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edit_text_bg">

                    <!-- INPUT -->
                    <EditText
                        android:layout_marginStart="5dp"
                        android:id="@+id/etEmail"
                        android:layout_toRightOf="@+id/mail_icon"
                        android:hint="E-posta"
                        android:padding="10dp"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <!-- ICON -->
                    <ImageView
                        android:padding="3dp"
                        android:id="@+id/mail_icon"
                        android:src="@drawable/mail"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:tint="@color/normal_text_color" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/txtPhoneNumber"
                    android:text="Telefon Numarası"
                    android:textSize="22sp"
                    android:textColor="@color/normal_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp" />

                <RelativeLayout
                    android:layout_marginTop="8dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edit_text_bg">

                    <!-- INPUT -->
                    <EditText
                        android:layout_marginStart="5dp"
                        android:id="@+id/etPhoneNumber"
                        android:layout_toRightOf="@+id/phone_icon"
                        android:hint="Telefon(+90)"
                        android:padding="10dp"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <!-- ICON -->
                    <ImageView
                        android:padding="3dp"
                        android:id="@+id/phone_icon"
                        android:src="@drawable/phone_number"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:tint="@color/normal_text_color" />

                </RelativeLayout>
                <!-- Telefon Numarası -->

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginTop="20dp"
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kaydet"
                    android:background="@drawable/rectangle_button_bg"
                    android:textColor="@color/black"
                    android:elevation="20sp"

                    />

            </LinearLayout>

        </ScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>