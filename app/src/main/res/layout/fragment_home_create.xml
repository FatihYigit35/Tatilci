<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.home.HomeCreateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Villa Adı -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilVillaName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Başlık">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Konum -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adres">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Geceleyin Ücreti -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNightlyRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Geceleyin Ücreti">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNightlyRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Kapasite -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCapacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kapasite">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCapacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Yatak Odası Sayısı -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilBedroomCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Yatak Odası Sayısı">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBedroomCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Yatak Sayısı -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilBedCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Yatak Sayısı">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBedCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Banyo Sayısı -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilBathroomCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Banyo Sayısı">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBathroomCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Havuz -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilHasPool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Havuz Var mı?">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etHasPool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Bahçe Alanı -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilGardenArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bahçe Alanı">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etGardenArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Olanaklar -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilAmenities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Olanaklar (virgülle ayırın)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAmenities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Minimum Kalış Süresi -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilMinStayDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Minimum Kalış Süresi">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMinStayDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Rezervasyon Ücreti -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilReservationFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rezervasyon Ücreti">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etReservationFee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Airbnb Hizmet Ücreti -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilAirbnbServiceFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Airbnb Hizmet Ücreti">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAirbnbServiceFee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Vergiler Hariç Toplam -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTotalExcludingTaxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vergiler Hariç Toplam">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTotalExcludingTaxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Bölge -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilRegion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bölge">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etRegion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Kaydet Butonu -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Kaydet" />

    </LinearLayout>

</FrameLayout>